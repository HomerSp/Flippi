<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/search_row_header_height">

    <com.matnar.app.android.flippi.view.widget.PriceCheckFilterSpinner
        android:id="@+id/search_row_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:entries="@array/search_row_filter_disabled" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1.0dp"
        android:background="@drawable/shadow_top" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/listDivider"/>

</RelativeLayout>