<resources>

    <style name="AppTheme.Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="android:colorBackground">@color/search_results_background</item>
        <item name="android:dropDownItemStyle">@style/AutoCompleteBackgroundLight</item>
        <item name="android:dropDownListViewStyle">@style/AutoCompleteBackgroundLight</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Default">
        <item name="android:textColorTertiary">#8a000000</item>
        <item name="android:textColorTertiaryInverse">#b3ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorTertiary">#8a000000</item>
        <item name="android:textColorTertiaryInverse">#b3ffffff</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AutoCompleteBackgroundLight">
        <item name="android:background">@android:color/background_light</item>
    </style>

</resources>
